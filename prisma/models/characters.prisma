model PlayerCharacter {
  id          String   @id @default(cuid(2))
  name        String
  pronouns    String
  description String
  traits      String[]
  notes       String?
  user        User     @relation(fields: [userId], references: [id])
  userId      String   @unique
}

model NonPlayerCharacter {
  id          String       @id @default(cuid(2))
  name        String
  moniker     String
  clues       Clue[]
  crimeScenes CrimeScene[]
}
